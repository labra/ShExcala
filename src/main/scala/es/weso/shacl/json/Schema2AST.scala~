package es.weso.shacl.json
import AST._
import scala.util._
import es.weso.shacl.Shacl._
import es.weso.shacl._
import es.weso.shacl.PREFIXES._
import es.weso.rdf.PrefixMap
import es.weso.rdfgraph.nodes._

object Schema2AST {
  
 def cnvSchema(schema: Schema): Try[SchemaAST] = {
   Try{
     val ps = cnvPrefix(schema.pm)
     SchemaAST.empty.copy(
       prefixes=ps    
     , start=schema.shaclSchema.start.map(_.toString)
     )
   }
 }
 
 
 def cnvPrefix(pm:PrefixMap): Option[Map[String,String]] =
   if (pm.pm.isEmpty) None
   else {
     pm.pm.map((key,value) => (key,value.toString)
   }

}
